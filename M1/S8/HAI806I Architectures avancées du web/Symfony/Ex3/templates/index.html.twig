<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <div>
        <h1>Connexion</h1>
        {% if error%}
            <div class="alert">{{error.messageKey | trans(error.messageData, 'security')}}</div>
        {%endif%}
        <form action="{{path('app_login')}}" method="POST">
            <input type="text" name="_username" placeholder="Nom d'utilisateur" value="{{last_username}}" required/>
            <input type="password" name="_password" placeholder="Mot de passe" required/>
            <button type="submit">Se connecter</button>
        </form>
        </div>
        {% endblock %}
    </body>
</html>
